
<div class="grid_8" id = "reg">
  <div id="sos"></div>
  <div id="top_r"></div>
  <div id="side_r">
    <b><%= t :reg1_header %></b>
    <br/><br/>
    
    <% if flash[:error] %>
      <div id ="error"><%= image_tag "error.png" %>
      <%= flash[:error] %></div>
    <% end %>
    <% form_tag :controller => 'followers',:action => 'create' do %>
    

      <label class="fstr"><%= t :reg1_id %>:</label> <%=  text_field_tag :idno, nil,:size => 30%><br/>
      <label class="fstr"><%= t :reg1_code %>:</label> <%= text_field_tag :vcode, nil,:size => 30 %>

  <%= show_simple_captcha :distortion => 'medium' %>
      <br/>
      <div style="float:left; width:400px;"><%=link_to '<< Back', wards_path  %></div>
      <%= if logged_in?
    
        submit_tag "Follow"
    
      else
    
        submit_tag "Next"
    
      end%>
    <% end %>
    
    
  </div>
  <div id="bot_r"></div>
</div>

<div class="grid_4" id ="tehside_r">
  <div id="par"><p><%= t :side_r %></p></div>
  <div id="pic_r"></div>
  
</div>



